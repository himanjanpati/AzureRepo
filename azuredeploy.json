{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

        "StoageAccountName": {
                "type": "string",
            "maxLength":24,
            "minLength":3
        },
         "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Premium_LRS"
            ]
         }
       
    },
    "functions": [],
    "variables": {},
    "resources": [{
        "name": "[parameters('StoageAccountName')]",
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "2019-06-01",
        "tags": {
            "displayName": "[parameters('StoageAccountName')]"
        },
        "location": "[resourceGroup().location]",
        "kind": "StorageV2",
        "sku": {
            "name": "[parameters('storageAccountType')]"
        
        },
        "properties": {
            "tier":"Stanadard"
        }
    }],
    "outputs": {}
}